.container
  .row
    .col-lg-12
      %h1 Editing Avatar
      - if @avatar.image?
        %td= image_tag(@avatar.image, style: "width:25px;border-radius:50%;")
      = render 'form', avatar: @avatar
      = link_to 'Show', admin_avatar_path(@avatar)
      |
      \#{link_to 'Back', admin_index_path}
