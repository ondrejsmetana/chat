  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <p id="notice"><%= notice %></p>

        <h1>Manage Avatars</h1>

        <table class="table table-striped table-hover ">
          <thead>
            <tr>
              <th>#</th>
              <th>Code</th>
              <th>Show</th>
              <th>Edit</th>
              <th>Delete</th>
            </tr>
          </thead>

          <tbody>
            <% @avatars.each do |avatar| %>
            <tr>
              <% if avatar.image? %>
              <td><%= image_tag(avatar.image, style: "width:25px;border-radius:50%;") %></td>
              <% end %>
              <td><%= avatar.avatar_code %></td>
              <td><%= link_to 'Show', avatar %></td>
              <td><%= link_to 'Edit', edit_avatar_path(avatar) %></td>
              <td><%= link_to 'Destroy', avatar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Avatar', new_avatar_path %>
      </div>
    </div>
  </div>